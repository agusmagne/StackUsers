<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.details.UserDetailsActivity">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/userImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        android:background="@color/purple_700"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundPercent="1" />

    <TextView
        android:id="@+id/userDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="User display name"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/userImage"
        app:layout_constraintRight_toRightOf="@id/userImage"
        app:layout_constraintTop_toBottomOf="@id/userImage" />

    <TextView
        android:id="@+id/userReputation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1231"
        app:layout_constraintLeft_toLeftOf="@id/userDisplayName"
        app:layout_constraintRight_toRightOf="@id/userDisplayName"
        app:layout_constraintTop_toBottomOf="@id/userDisplayName" />

    <TextView
        android:id="@+id/topTagsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Top tags"
        app:layout_constraintLeft_toLeftOf="@id/userReputation"
        app:layout_constraintRight_toRightOf="@id/userReputation"
        app:layout_constraintTop_toBottomOf="@id/userReputation" />

    <TextView
        android:id="@+id/tag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/tag_background"
        android:padding="4dp"
        android:text="google android"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tag2"
        app:layout_constraintTop_toBottomOf="@id/topTagsHeader" />

    <TextView
        android:id="@+id/tag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="@drawable/tag_background"
        android:padding="4dp"
        android:text="google android"
        app:layout_constraintLeft_toRightOf="@id/tag1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tag1" />

    <TextView
        android:id="@+id/tag3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/tag_background"
        android:padding="4dp"
        android:text="google android"
        app:layout_constraintLeft_toLeftOf="@id/tag1"
        app:layout_constraintRight_toRightOf="@id/tag2"
        app:layout_constraintTop_toBottomOf="@id/tag1" />

    <TextView
        android:id="@+id/bronzeBadges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Bronze: 0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tag3" />

    <TextView
        android:id="@+id/silverBadges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Silver: 0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bronzeBadges" />

    <TextView
        android:id="@+id/goldBadges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Gold: 0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/silverBadges" />

    <TextView
        android:id="@+id/userLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Location: Buenos Aires, Argentina"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goldBadges" />

    <TextView
        android:id="@+id/creationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Creation date: Thu 12 July, 2012"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userLocation" />


</androidx.constraintlayout.widget.ConstraintLayout>